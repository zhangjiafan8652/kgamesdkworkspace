<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginLeft="17.5dp"


    android:layout_marginRight="17.5dp"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="15dp"
        android:singleLine="false"
        android:textColor="#9b9b9b"
        android:textSize="@dimen/zy_pay_continue_game_content_textsize" />


    <LinearLayout
        android:id="@+id/zy_pay_continue_game_content_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/zy_anonyms_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:text="正式账号"
                android:textSize="18sp"
                android:textColor="#f97e28"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:text="游客账号"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#9c9c9c"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="30dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/zy_point"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="完善的安全机制"
                    android:textSize="14sp"
                    android:textColor="#4a4a4a"
                    android:layout_marginLeft="-15dp"
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/zy_point"

                    android:layout_height="wrap_content" />
                <TextView
                    android:text="易丟失"
                    android:layout_width="wrap_content"

                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-15dp"
                    android:textColor="#4a4a4a"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="30dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/zy_point"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="多重找回方法"
                    android:textSize="14sp"
                    android:textColor="#4a4a4a"
                    android:layout_marginLeft="-15dp"
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/zy_point"

                    android:layout_height="wrap_content" />
                <TextView
                    android:text="无法找回"
                    android:layout_width="wrap_content"

                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-15dp"
                    android:textColor="#4a4a4a"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="30dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/zy_point"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="可参与充赠活动"
                    android:textSize="14sp"
                    android:textColor="#4a4a4a"
                    android:layout_marginLeft="-15dp"
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/zy_point"

                    android:layout_height="wrap_content" />
                <TextView
                    android:text="无法参与冲赠活动"
                    android:layout_width="wrap_content"

                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-15dp"
                    android:textColor="#4a4a4a"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/zy_anmonys_dialog_top"
        android:gravity="center">

        <TextView
            android:id="@+id/zy_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            android:background="@drawable/zy_textview"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="16.5sp" />

</LinearLayout>

</LinearLayout>