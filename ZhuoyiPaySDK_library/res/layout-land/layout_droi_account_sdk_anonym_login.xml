<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/sdk_land_dialog_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/sdk_land_dialog_back_style"
                android:onClick="onBack">

                <ImageView
                    android:id="@+id/droi_account_sdk_back_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/droi_account_sdk_dialog_back" />

            </LinearLayout>

            <TextView
                style="@style/sdk_land_dialog_title_style"
                android:text="@string/droi_account_sdk_anonym"/>

            <AutoCompleteTextView
                style="@style/sdk_land_input_view_style"
                android:id="@+id/droi_account_sdk_anonym_username_edit"
                android:hint="@string/droi_account_sdk_login_username_hint"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/droi_account_sdk_login_user_margin_top"
                android:drawableLeft="@drawable/droi_account_sdk_login_username_left_img" />

            <View
                style="@style/droi_account_sdk_slipt_style" />

            <AutoCompleteTextView
                style="@style/sdk_land_input_view_style"
                android:id="@+id/droi_account_sdk_anonym_password_edit"
                android:hint="@string/droi_account_sdk_login_password_hint"
                android:imeOptions="actionSend"
                android:drawableLeft="@drawable/droi_account_sdk_login_password_left_img"
                android:layout_marginTop="@dimen/droi_account_sdk_login_password_margin_top"/>

            <View
                style="@style/droi_account_sdk_slipt_style" />

            <Button
                style="@style/sdk_land_common_btn_style"
                android:id="@+id/droi_account_sdk_anonym_login_btn"
                android:text="@string/droi_account_sdk_login"
                android:layout_marginTop="@dimen/sdk_land_anonym_login_margin_top"/>

            <TextView
                android:id="@+id/droi_account_sdk_anonym_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginTop="@dimen/droi_account_sdk_anonym_tip_margin_top"
                android:textSize="@dimen/droi_account_sdk_anonym_tip_text_size" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>