<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/index_game_pic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/m4399_ope_img_default"/>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/index_game_name"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#dd000000"/>

    <TextView
        android:id="@+id/index_download"
        android:background="@drawable/m4399_ope_download_bg"
        android:layout_marginTop="12dp"
        android:layout_width="68dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:text="@string/m4399_ope_download"
        android:textSize="14sp"
        android:textColor="@color/m4399_ope_usercenter_white"/>



</LinearLayout>