<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sdk_rl_dialog_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/cqsdk_dialog_login_xml_bg">


    <ImageView
        android:id="@+id/sdk_img_user_bg"
        android:layout_width="0dp"
        android:layout_height="249dp"
        android:layout_centerInParent="true"
        android:background="@drawable/cqsdk_dialog_login_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center">


            <TextView
                android:id="@+id/sdk_action_bar_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天天游戏中心账号登录"
                android:textColor="@color/cqsdk_green_light"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/sdk_ll_userName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/cqsdk_bg_frame"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="10dp"
                android:src="@drawable/cqsdk_img_username" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp">

                <EditText
                    android:id="@+id/sdk_et_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请输入手机号码或邮箱"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/cqsdk_dialog_login_edit_text_color"
                    android:textColorHint="@color/cqsdk_gray_text"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/sdk_tb_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignRight="@+id/sdk_et_userName"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/cqsdk_btn_open_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/cqsdk_bg_frame"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_passWord"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="10dp"
                android:src="@drawable/cqsdk_img_password" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/sdk_et_passWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/sdk_forget_password"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:imeOptions="flagNoExtractUi"
                    android:maxLength="20"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/cqsdk_dialog_login_edit_text_color"
                    android:textColorHint="@color/cqsdk_gray_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/sdk_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:text="忘记密码？"
                    android:textColor="@color/cqsdk_green_light"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/sdk_login"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/cqsdk_green_button"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="快速登录"
            android:textColor="@color/cqsdk_while"
            android:textSize="@dimen/cqsdk_general_font_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            >

            <TextView
                android:id="@+id/sdk_login_visitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="游客登录"
                android:textColor="@color/cqsdk_green_light"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sdk_fast_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="手机号登录"
                android:textColor="@color/cqsdk_green_light"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>