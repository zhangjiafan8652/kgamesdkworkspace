<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sdk_rl_dialog_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cqsdk_view_bg"
    android:orientation="vertical">

    <com.ltsdkgame.sdk.view.TitleBar
        android:id="@+id/sdk_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_marginTop="14dp"
            android:text="请选择注册账号类型"
            android:textColor="@color/cqsdk_black_text"
            android:textSize="13sp" />

        <!--手机号码注册-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sdk_iv_phone_retrieve"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cqsdk_view_retrieve_pwd_pitch_on" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="手机号码注册"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sdk_ly_phone"
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cqsdk_line" />

                <EditText
                    android:id="@+id/sdk_et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:background="@null"
                    android:hint="@string/cqsdk_bind_phone_tip"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="@color/cqsdk_main_txt"
                    android:textColorHint="@color/cqsdk_gray_text"
                    android:textSize="13sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cqsdk_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/sdk_et_verification_code"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="number"
                        android:maxLength="4"
                        android:maxLines="1"
                        android:textColor="@color/cqsdk_main_txt"
                        android:textColorHint="@color/cqsdk_gray_text"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/sdk_btn_send_verification_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="8dp"
                        android:background="@color/cqsdk_transparent"
                        android:text="获取验证码"
                        android:textColor="@color/cqsdk_green_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/sdk_green_line"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="14dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="14dp"
                        android:layout_toLeftOf="@id/sdk_btn_send_verification_code"
                        android:background="@color/cqsdk_green_light" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cqsdk_line" />
            </LinearLayout>

        </LinearLayout>



        <!--邮箱注册-->
        <LinearLayout
            android:id="@+id/sdk_ll_email_retrieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sdk_iv_email_retrieve"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cqsdk_view_retrieve_pwd_pitch_off" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="邮箱注册"
                    android:textColor="@color/cqsdk_black_text"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/sdk_ly_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cqsdk_line" />


                <EditText
                    android:id="@+id/sdk_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:background="@null"
                    android:hint="请输入邮箱"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textEmailAddress"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/cqsdk_black_text"
                    android:textColorHint="@color/cqsdk_gray_text"
                    android:textSize="13sp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/sdk_btn_next"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/cqsdk_green_button"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/cqsdk_while"
        android:textSize="@dimen/cqsdk_general_font_size" />
</LinearLayout>