<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cqsdk_main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cqsdk_main_bg"
        android:orientation="vertical">

        <com.ltsdkgame.sdk.view.TitleBar
            android:id="@+id/sdk_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/cqsdk_bg_frame"
            android:orientation="vertical">

            <EditText
                android:id="@+id/sdk_edt_desc"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:background="@android:color/transparent"
                android:gravity="left|top"
                android:hint="@string/cqsdk_submit_feedback_tip"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="12dp"
                android:textColor="@color/cqsdk_main_txt"
                android:textColorHint="@color/cqsdk_gray_text"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#eeeeee" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sdk_img_select_photo"
                    android:layout_width="27dp"
                    android:layout_height="38dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="11dp"
                    android:paddingBottom="11dp"
                    android:src="@drawable/cqsdk_select_photo" />

                <com.ltsdkgame.sdk.view.widget.MyGridView
                    android:id="@+id/sdk_gv_submit_feedback"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="8dp"
                    android:listSelector="@color/cqsdk_transparent"
                    android:numColumns="3"
                    android:verticalSpacing="8dp" />
            </RelativeLayout>

        </LinearLayout>


        <Button
            android:id="@+id/sdk_btn_submit_feedback"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="@dimen/cqsdk_general_margin"
            android:layout_marginRight="@dimen/cqsdk_general_margin"
            android:layout_marginTop="22dp"
            android:background="@drawable/cqsdk_green_button"
            android:text="@string/cqsdk_submit_feedback_submit"
            android:textColor="#fffefe"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>