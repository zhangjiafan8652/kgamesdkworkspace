<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cqsdk_main_bg"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv_trade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cqsdk_main_bg"
        android:cacheColorHint="@color/cqsdk_transparent"
        android:divider="@color/cqsdk_transparent"
        android:dividerHeight="0dp"
        android:listSelector="@color/cqsdk_transparent"
        android:paddingBottom="@dimen/cqsdk_general_margin">

    </ListView>

    <ViewStub
        android:id="@+id/sdk_stub_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/cqsdk_feedback_empty" />
</LinearLayout>