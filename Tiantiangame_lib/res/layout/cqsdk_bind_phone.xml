<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cqsdk_main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="14dp"
        android:background="@color/cqsdk_main_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sdk_tv_bind_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="7dp"
            android:text="@string/cqsdk_update_pwd_tip"
            android:textColor="#333333"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/sdk_et_update_pwd_old"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="58dp"
            android:hint="@string/cqsdk_bind_phone_tip"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/cqsdk_main_txt"
            android:textColorHint="@color/cqsdk_gray_text"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sdk_verification_code"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/sdk_green_line"
                android:background="@null"
                android:hint="请输入验证码"
                android:imeOptions="flagNoExtractUi"
                android:maxLength="4"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/cqsdk_main_txt"
                android:textColorHint="@color/cqsdk_gray_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sdk_send_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:text="获取验证码"
                android:textColor="@color/cqsdk_green_light"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sdk_green_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@id/sdk_send_verification_code"
                android:background="@color/cqsdk_green_light" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee" />

        <EditText
            android:id="@+id/sdk_et_update_pwd_renew"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="@string/cqsdk_update_pwd_renew"
            android:inputType="textPassword"
            android:background="@null"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/cqsdk_main_txt"
            android:textColorHint="@color/cqsdk_gray_text"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee" />

    </LinearLayout>
    <Button
        android:id="@+id/sdk_btn_update_pwd_finish"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/cqsdk_green_button"
        android:text="@string/cqsdk_update_pwd_finish"
        android:textColor="@color/cqsdk_while"
        android:textSize="@dimen/cqsdk_general_font_size" />
</LinearLayout>