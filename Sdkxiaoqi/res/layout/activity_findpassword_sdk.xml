<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >
    
    <include 
        android:id="@+id/findpassword_title_rl"
        layout="@layout/item_main_title_rl"        
        />

    <RelativeLayout
        android:layout_marginTop="25dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/findpassword_iv"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:src="@drawable/activity_phonenumber" />

        <EditText
            android:id="@+id/findpassword_et_telephonenumber"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_toRightOf="@+id/findpassword_iv"
            android:background="@null"
            android:textSize="14sp"
            style="@style/et_tc_textColorHint"
            android:imeOptions="flagNoExtractUi"
            android:hint="请输入手机号码" />
        <View
        android:id="@+id/findpassword_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"       
        android:layout_marginRight="15dip"
        android:background="@color/line" 
        android:layout_below="@+id/findpassword_iv"
        android:layout_marginLeft="15dip"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <EditText 
            android:id="@+id/findpassword_et_code"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:background="@null"
            android:textSize="14sp"
            android:hint="验证码输入框"
            android:layout_marginLeft="20dip"
            style="@style/et_tc_textColorHint"
            android:imeOptions="flagNoExtractUi"
            />
        <Button 
            android:id="@+id/findpassword_btn_getcode"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/text_green"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginRight="15dip"
            />
    </LinearLayout>
    
    <Button
        android:id="@+id/findpassword_btn_next" 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/green_radio_bg"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:text="下一步"
        android:textSize="18sp"
        android:textColor="#ffffff"
        />
    
    
</LinearLayout>
