<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical" >
    
    
    <LinearLayout
        android:id="@+id/alertdialog_ll_top"
        android:background="@drawable/smallhao_alertdialog_top_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:gravity="center"
        >
        <TextView
            android:id="@+id/smallhao_alertdialog_tv_title"
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="切换提示"
            android:textColor="#66000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/smallhao_alertdialog_tv_message"
            android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="确定要切换小号吗？"
            android:textColor="#66000000"
            android:lineSpacingExtra="5dip"
            android:layout_marginBottom="10dip"          
            android:textSize="14sp"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            />
        
        <View
        android:id="@+id/setpaypassword_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dip"       
        android:background="@color/line" 
        />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_below="@+id/alertdialog_ll_top"
        android:background="@drawable/smallhao_alertdialog_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/alertdialog_btn_cancel" 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
             android:textColor="#0099ff"
            android:background="@null"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <View
        android:id="@+id/alertdialog_line_1"
        android:layout_width="1dip"
        android:layout_height="wrap_content"       
        android:background="@color/line" 
        />
        <Button
            android:id="@+id/alertdialog_btn_ensure" 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="#0099ff"
            android:background="@null"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center"
            />
    </LinearLayout>
    

</RelativeLayout>
