<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/register_phonenumber_title_rl"
        layout="@layout/item_main_title_rl" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="@dimen/activity_horizontal_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="@dimen/activity_horizontal_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dip"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/register_phonenumber_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    android:src="@drawable/activity_phonenumber" />

                <EditText
                    android:id="@+id/register_phonenumber_et_telephonenumber"
                    style="@style/et_tc_textColorHint"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_toRightOf="@+id/register_phonenumber_iv"
                    android:background="@null"
                    android:hint="请输入11位手机号码"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="number"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/register_phonenumber_iv_deleteuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:clickable="true"
                    android:padding="10dip"
                    android:src="@drawable/activity_login_delete"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/register_phonenumber_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/register_phonenumber_iv"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="@color/line" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/activity_horizontal_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/register_phonenumber_et_code"
                    style="@style/et_tc_textColorHint"
                    android:layout_width="150dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="20dip"
                    android:background="@null"
                    android:hint="验证码输入框"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="number"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/register_phonenumber_iv_deletecode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:clickable="true"
                    android:padding="10dip"
                    android:src="@drawable/activity_login_delete"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/register_phonenumber_btn_getcode"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@color/text_green"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/register_phonenumber_btn_next"
                android:layout_width="@dimen/activity_horizontal_width"
                android:layout_height="40dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                android:background="@drawable/green_radio_bg"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="18sp" />
            
            <RelativeLayout 
                 android:id="@+id/re_rl"
                 android:layout_width="@dimen/activity_horizontal_width"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dip"  
                >
          
              <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/register_phonenumber_userxieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingBottom="30dip"
                android:paddingTop="10dip"               
                android:text="小7用户服务协议"
                android:textColor="@color/text_green"
                android:visibility="gone" />     
                

            <TextView
                android:id="@+id/register_phonenumber_usernameregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingBottom="30dip"
                android:paddingTop="10dip"
                android:layout_alignParentRight="true"
                android:text="用户名注册"
                android:textColor="@color/text_green"
                android:visibility="gone"/>
             </RelativeLayout>           
            <!-- 加入Q群和联系客服 -->
            <RelativeLayout
                android:id="@+id/register_phonenumber_joinQandCon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="20dip"
                android:clickable="true" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/fragment_helpcenter_versioncode"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#c2c2c2"
                    android:textSize="13sp"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/fragment_helpcenter_btn_telephone"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:background="@drawable/selector_help_telephone" />

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_helpcenter_btn_telephone"
                        android:layout_marginTop="3dip"
                        android:gravity="center"
                        android:text="联系客服"
                        android:textColor="#4bd790"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" >

                    <Button
                        android:id="@+id/fragment_helpcenter_btn_qq"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:background="@drawable/selector_help_qq" />

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_helpcenter_btn_qq"
                        android:layout_marginTop="3dip"
                        android:gravity="center"
                        android:text="加入Q群"
                        android:textColor="#0ec0ec"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>