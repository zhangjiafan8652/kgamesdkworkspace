<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_tv_quanxian_rl"
                android:layout_width="@dimen/activity_horizontal_width"
                android:layout_height="wrap_content"               
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:background="#eefde1"
                android:paddingTop="5dip"
                android:clickable="true" 
                android:paddingBottom="5dip" >       
                <ImageView
                    android:id="@+id/login_iv_quanxian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/x7_openxuan"
                    android:textColor="#6fb205" />

                <TextView
                    android:id="@+id/login_tv_quanxian_del"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/activity_login_delete"
                    android:clickable="true" />  
</RelativeLayout>
