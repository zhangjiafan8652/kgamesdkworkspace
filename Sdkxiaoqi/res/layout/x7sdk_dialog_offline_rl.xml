<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/x7sdk_dialog_offline_top_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#80000000">

        <LinearLayout
            android:layout_width="320dip"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/white_yuanjiao_bj"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="15dip"
            android:paddingTop="15dip" >

            <TextView
                android:id="@+id/x7sdk_dialog_offline_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text=""
                android:textColor="@color/text_black3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/x7sdk_dialog_offline_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:text=""
                android:textColor="@color/text_black3"
                android:textSize="13sp" />

            <Button
                android:id="@+id/x7sdk_dialog_offline_ensure_btn"
                android:layout_width="80dip"
                android:layout_height="35dip"
                android:layout_marginTop="15sp"
                android:background="@drawable/x7sdk_blue_yuanjiao_bj"
                android:gravity="center"
                android:text="我知道了"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>