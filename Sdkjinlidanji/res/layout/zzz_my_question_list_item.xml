<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/zzz_my_question_item_empty_bottom_height">

    <RelativeLayout
        android:id="@+id/zzz_time_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zzz_my_question_item_height">

        <TextView
            android:id="@+id/zzz_question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:includeFontPadding="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/zzz_my_question_time_text_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zzz_my_question_time_line_height"
            android:layout_marginLeft="@dimen/zzz_my_question_line_margin_boundary"
            android:layout_marginRight="@dimen/zzz_my_question_line_margin_middle"
            android:layout_marginTop="@dimen/zzz_my_question_line_margin_top"
            android:layout_toLeftOf="@id/zzz_question_time"
            android:background="@color/zzz_time_layout_line_color"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zzz_my_question_time_line_height"
            android:layout_marginLeft="@dimen/zzz_my_question_line_margin_middle"
            android:layout_marginRight="@dimen/zzz_my_question_line_margin_boundary"
            android:layout_marginTop="@dimen/zzz_my_question_line_margin_top"
            android:layout_toRightOf="@id/zzz_question_time"
            android:background="@color/zzz_time_layout_line_color"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/zzz_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zzz_time_layout"
        android:layout_marginLeft="@dimen/zzz_my_question_q_margin_left"
        android:layout_marginTop="@dimen/zzz_my_question_q_margin_top"
        android:includeFontPadding="false"
        android:text="@string/zzz_my_question_question"
        android:textColor="@android:color/black"
        android:textSize="@dimen/zzz_my_question_text_size"/>

    <TextView
        android:id="@+id/zzz_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/zzz_q"
        android:layout_marginLeft="@dimen/zzz_my_question_question_margin_left"
        android:layout_marginRight="@dimen/zzz_my_question_question_margin_right"
        android:layout_toRightOf="@id/zzz_q"
        android:includeFontPadding="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/zzz_my_question_text_size"/>

    <TextView
        android:id="@+id/zzz_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/zzz_q"
        android:layout_below="@id/zzz_question"
        android:layout_marginTop="@dimen/zzz_my_question_a_margin_top"
        android:includeFontPadding="false"
        android:text="@string/zzz_my_question_answer"
        android:textColor="@android:color/black"
        android:textSize="@dimen/zzz_my_question_text_size"/>

    <TextView
        android:id="@+id/zzz_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/zzz_question"
        android:layout_alignTop="@id/zzz_a"
        android:layout_below="@id/zzz_question"
        android:layout_marginRight="@dimen/zzz_my_question_answer_margin_right"
        android:includeFontPadding="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/zzz_my_question_text_size"/>

</RelativeLayout>