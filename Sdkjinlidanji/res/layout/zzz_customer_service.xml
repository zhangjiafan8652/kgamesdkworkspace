<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/zzz_activity_width"
    android:layout_height="@dimen/zzz_activity_height"
    android:orientation="vertical">
    <include
        android:id="@+id/zzz_title"
        layout="@layout/zzz_common_title_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zzz_dialog_content_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/zzz_telephone"
                layout="@layout/zzz_customer_service_item"/>
            <include
                android:id="@+id/zzz_qq"
                layout="@layout/zzz_customer_service_item"/>
            <include
                android:id="@+id/zzz_wechat"
                layout="@layout/zzz_customer_service_item"/>
            <include
                android:id="@+id/zzz_supervise"
                layout="@layout/zzz_customer_service_item"/>
            <include
                android:id="@+id/zzz_working_time"
                layout="@layout/zzz_customer_service_item"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>