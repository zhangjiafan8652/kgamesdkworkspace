<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" >

    <ImageView
        android:id="@+id/sogou_game_sdk_iv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"/>
	<TextView 
	    android:id="@+id/sogou_game_sdk_tv_date"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:textColor="#999"
	    android:textSize="12sp"/>
	<TextView 
	    android:id="@+id/sogou_game_sdk_tv_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000"
	    android:textSize="15sp"
	    android:singleLine="true"
	    android:layout_toRightOf="@id/sogou_game_sdk_iv_state"
	    android:layout_toLeftOf="@id/sogou_game_sdk_tv_date"/>
	<TextView 
	    android:id="@+id/sogou_game_sdk_tv_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:textColor="#999"
	    android:textSize="14sp"
	    android:layout_below="@id/sogou_game_sdk_tv_title"
	    android:layout_marginTop="5dp"
	    android:layout_alignLeft="@id/sogou_game_sdk_tv_title"
	    android:maxLines="2"
	    android:minLines="2"/>
</RelativeLayout>
