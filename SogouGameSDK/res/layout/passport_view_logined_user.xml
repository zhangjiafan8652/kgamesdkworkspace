<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dip"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/passport_view_logined_user_icon"
        android:layout_width="73dip"
        android:layout_height="73dip"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/passport_view_logined_user_icon_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/passport_icon_head_bg"
                android:padding="3dip"
                android:src="@drawable/passport_icon_head_def" />

            <TextView
                android:id="@+id/passport_view_logined_user_icon_from"
                android:layout_width="fill_parent"
                android:layout_height="16dip"
                android:layout_alignParentBottom="true"
                android:background="#66000000"
                android:gravity="center"
                android:hint="来源"
                android:textColor="#636363"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/passport_view_logined_user_icon_front"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/passport_activity_sso_btn_dynasticuser" />
    </FrameLayout>

    <TextView
        android:id="@+id/passport_view_logined_user_name"
        android:layout_width="75dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/passport_view_logined_user_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dip"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:hint="昵称"
        android:singleLine="true"
        android:textColor="#636363"
        android:textSize="15sp" />

</RelativeLayout>