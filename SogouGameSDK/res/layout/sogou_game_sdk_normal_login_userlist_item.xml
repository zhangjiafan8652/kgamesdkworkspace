<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sogou_game_sdk_recomgame_view_item_sr"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sogou_game_sdk_userlist_item_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/sogou_game_sdk_userlist_item_delete_tv"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/sogou_game_sdk_account_rl"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:src="@drawable/sogou_game_sdk_error_icon"
        android:clickable="true" />
</LinearLayout>