<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sogou_game_sdk_exit_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sogou_game_sdk_exit_dialog_bg">

    <com.sogou.wan.common.NetworkImageView
        android:id="@+id/sogou_game_sdk_iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sogou_game_sdk_ads_default_icon" />

    <Button
        android:id="@+id/sogou_game_sdk_btn_quit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sogou_game_sdk_dialog_common_bottom"
        android:text="退出游戏"
        android:textColor="@color/sogou_game_sdk_color_ff8a00"
        android:textSize="15sp" />
</RelativeLayout>