<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dip"
    android:background="@drawable/sogou_game_sdk_toast_view_bg"
    android:gravity="center_horizontal|bottom"
    android:orientation="horizontal"
    android:paddingBottom="8sp"
    android:paddingTop="8sp" >

    <ImageView
        android:id="@+id/sogou_game_sdk_login_loading_img"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:src="@drawable/sogou_game_sdk_float_icon" />

    <com.sogou.gamecenter.sdk.views.AlwaysMarqueeTextView
        android:id="@+id/sogou_game_sdk_login_alert_user"
        style="@style/sogou_game_sdk_pay_s22_c3d3d3d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        android:singleLine="true"
        android:textColor="@color/sogou_game_sdk_color_ffffff" />

    <TextView
        android:id="@+id/sogou_game_sdk_login_alert_loading"
        style="@style/sogou_game_sdk_textview_s20_c595959"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:singleLine="true"
        android:text="@string/sogou_game_sdk_login_alert_loading"
        android:textColor="@color/sogou_game_sdk_color_ffffff"
        android:textSize="14sp" />

</LinearLayout>