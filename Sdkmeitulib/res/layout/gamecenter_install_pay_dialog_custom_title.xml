<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="13dp"
        android:textColor="#E6000000"
        android:textSize="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gamecenter_dialog_divider_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_negative_btn"
            android:layout_width="152dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@android:string/cancel"
            android:textColor="@color/common_color_E6000000"
            android:textSize="15dp"
            android:typeface="normal"
            android:background="@null"/>

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="@color/gamecenter_dialog_divider_line_color" />

        <Button
            android:id="@+id/dialog_positive_btn"
            android:layout_width="152dp"
            android:layout_height="60dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/gamecenter_pay_install_btn_txt"
            android:textColor="@color/gamecenter_dialog_positive_btn_text_color"
            android:textSize="15dp"
            android:typeface="normal" />
    </LinearLayout>
</LinearLayout>