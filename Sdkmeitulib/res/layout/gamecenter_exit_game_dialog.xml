<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="303dp"
        android:layout_height="314dp">

        <ImageView
            android:layout_width="303dp"
            android:layout_height="314dp"
            android:scaleType="fitXY"
            android:src="@drawable/gamecenter_exit_game_bg" />

        <LinearLayout
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gamecenter_exit_dialog_quit_btn"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/gamecenter_pink_stroke_btn_bg"
                android:gravity="center"
                android:text="@string/gamecenter_exit_game_quit"
                android:textColor="@color/common_exit_dialog_btn_bg" />

            <TextView
                android:id="@+id/gamecenter_exit_dialog_quit_resume"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/gamecenter_pink_fill_btn_bg"
                android:gravity="center"
                android:text="@string/gamecenter_exit_game_resume"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>