<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/account_white">

    <com.meitu.library.openaccount.widget.OpenAccountTitleLayout
        android:id="@+id/account_info_back_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/account_white"
        app:account_title="@string/account_title_information" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/account_info_back_layout"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="88dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/account_info_head_tv"
                    android:layout_width="88dp"
                    android:layout_height="85dp"
                    android:background="@drawable/openaccount_info_head_ic" />

                <com.meitu.library.openaccount.widget.OpenAccountCircleImageView
                    android:id="@+id/account_info_head_cicle_iv"
                    android:layout_width="88dp"
                    android:layout_height="85dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/account_info_uid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/account_color_bbbbbb"
                android:textSize="14dp"
                tools:text="ID:18958894" />

            <!--昵称-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <TextView
                    android:id="@+id/account_info_name_tv"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="11dp"
                    android:text="@string/account_info_name"
                    android:textColor="@color/account_color_333333"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/account_info_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/account_info_name_tv"
                    android:background="@android:color/transparent"
                    android:hint="@string/account_info_name_hit"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/openaccount_cursor_shape"
                    android:textColor="@color/account_color_333333"
                    android:textColorHint="@color/account_color_dddddd"
                    android:textSize="15dp"
                    android:paddingRight="22dp"
                    tools:text="MMMMMM" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/account_line_color" />
            </RelativeLayout>

            <!--性别-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <TextView
                    android:id="@+id/account_info_sex_tv"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="11dp"
                    android:text="@string/account_info_sex"
                    android:textColor="@color/account_color_333333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/account_info_sex_select_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/account_info_sex_tv"
                    android:gravity="left"
                    android:text="@string/account_info_hit"
                    android:textColor="@color/account_color_dddddd"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/openaccount_arrow_ic" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/account_line_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <TextView
                    android:id="@+id/account_info_date_tv"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="11dp"
                    android:text="@string/account_info_date"
                    android:textColor="@color/account_color_333333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/account_info_date_select_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/account_info_date_tv"
                    android:gravity="left"
                    android:text="@string/account_info_hit"
                    android:textColor="@color/account_color_dddddd"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/openaccount_arrow_ic" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/account_line_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <TextView
                    android:id="@+id/account_info_location_tv"
                    android:layout_width="106dp"
                    android:layout_height="40dp"
                    android:paddingLeft="11dp"
                    android:text="@string/account_info_location"
                    android:gravity="center|left"
                    android:textColor="@color/account_color_333333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/account_info_location_select_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/account_info_location_tv"
                    android:gravity="left"
                    android:text="@string/account_info_hit"
                    android:textColor="@color/account_color_dddddd"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/openaccount_arrow_ic" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/account_line_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:minHeight="40dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <TextView
                    android:id="@+id/account_info_signature_tv"
                    android:layout_width="106dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:text="@string/account_info_signature"
                    android:textColor="@color/account_color_333333"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/account_info_signature_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/account_info_signature_tv"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:hint="@string/account_info_signature_hit"
                    android:maxHeight="72dp"
                    android:minHeight="40dp"
                    android:paddingRight="11dp"
                    android:paddingTop="9.5dp"
                    android:textCursorDrawable="@drawable/openaccount_cursor_shape"
                    android:textColor="@color/account_color_333333"
                    android:textColorHint="@color/account_color_dddddd"
                    android:textSize="15dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/account_info_signature_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="22dp"
                android:text="0/140"
                android:textColor="@color/account_color_bbbbbb"
                android:textSize="10dp"
                android:visibility="gone"
                tools:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="3dp"
                android:background="@color/account_line_color" />

            <Button
                android:id="@+id/account_info_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/openaccount_common_button_sel"
                android:text="@string/account_common_complete"
                android:textColor="@color/account_white"
                android:textSize="17dp" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/account_common_message_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:minHeight="36dp" />
</RelativeLayout>