<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/gamecent_account_title"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="33dp"
        android:textColor="@color/gamecenter_color_E6000000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/gamecent_account_change_btn"
        android:layout_width="76dp"
        android:layout_height="25dp"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/common_green_stroke_btn_bg"
        android:includeFontPadding="false"
        android:text="@string/gamecenter_login_welcome_progress_change_account_text"
        android:textColor="@color/common_color_E63BB73B"
        android:textSize="13dp" />
</LinearLayout>