<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zq_sdk_shape_bg_dlg_hide_float"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:layout_marginTop="31dp"
        android:text="重新登录可再次显示"
        android:textStyle="bold"
        android:textColor="#ff9019"
        android:textSize="19sp" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableLeft="@drawable/zq_sdk_checkbox_hide_float"
        android:drawablePadding="6dp"
        android:text="不再弹出此提示"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="118dp"
            android:layout_height="44dp"
            android:background="@drawable/zq_sdk_shape_bg_button_hdie_float_normal"
            android:text="取消"
            android:textColor="#ff9219"
            android:textSize="16sp" />

        <Button
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/btnCancel"
            android:id="@+id/btnHide"
            android:layout_width="118dp"
            android:layout_height="44dp"
            android:background="@drawable/zq_sdk_shape_bg_button_hdie_float_press"
            android:text="隐藏"
            android:textColor="#090506"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>