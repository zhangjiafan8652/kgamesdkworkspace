<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/zq_sdk_shape_white_bg_radius"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:textStyle="bold"
            android:text="发现新版本"
            android:textColor="#ff8f19"
            android:textSize="18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="34dp"
            android:paddingRight="34dp"
            android:lineSpacingExtra="8dp"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="              本次更新需重新下载游戏，请点击更新开始下载。" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#a0a0a0"
            android:padding="15dp"
            android:textSize="13sp"
            android:text="（建议在WiFi环境下载）" />

        <TextView
            android:id="@+id/tvUpdate"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginBottom="18dp"
            android:text="更新"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/zq_sdk_shape_bg_radius_6dp_btn_update"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>
</LinearLayout>