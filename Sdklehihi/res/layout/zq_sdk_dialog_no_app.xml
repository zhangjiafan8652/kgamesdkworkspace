<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zq_sdk_shape_bg_radius_4dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/zq_sdk_shape_bg_dlg_no_app_title"
        android:gravity="center"
        android:text="立即安装"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:text="         此操作需在乐嗨嗨游戏APP内进行，请立即安装。"
        android:textColor="#666666"
        android:textSize="16sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e9e9e9" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/zq_sdk_shape_bg_dlg_no_app_bottom">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:text="取消"
            android:textColor="#999"
            android:textSize="18sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e9e9e9" />

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:text="安装"
            android:textColor="#f16a08"
            android:textSize="18sp" />
    </TableRow>

</LinearLayout>