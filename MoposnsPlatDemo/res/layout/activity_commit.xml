<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WelcomeActivity" >

    <TextView 
	    android:id="@+id/text_packageName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:text="包名:"
	    android:textSize="20sp"/>
    
	<TextView 
	    android:id="@+id/text_info1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/text_packageName"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="20dp"
	    android:text="分数1:"
	    android:textSize="20sp"/>
	
	<EditText 
	    android:id="@+id/edit_score1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/text_info1"
	    android:layout_alignTop="@id/text_info1"
	    android:maxLength="19"
	    android:inputType="number"
	    />
	
	<TextView 
	    android:id="@+id/text_info2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/text_info1"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="20dp"
	    android:text="分数2:"
	    android:textSize="20sp"/>
	
	<EditText 
	    android:id="@+id/edit_score2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/text_info2"
	    android:layout_alignTop="@id/text_info2"
	    android:maxLength="19"
	    android:inputType="number"
	    />
	
	<TextView 
	    android:id="@+id/text_info3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/text_info2"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="20dp"
	    android:text="分数3:"
	    android:textSize="20sp"/>
	
	<EditText 
	    android:id="@+id/edit_score3"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/text_info3"
	    android:layout_alignTop="@id/text_info3"
	    android:maxLength="19"
	    android:inputType="number"
	    />
	
	<Button 
	    android:id="@+id/btn_commit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/text_info3"
	    android:layout_marginTop="40dp"
	    android:layout_marginLeft="50dp"
	    android:text="提交"
	    android:textSize="20sp"/>
       
	<TextView 
	    android:id="@+id/text_result"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_toRightOf="@id/btn_commit"
	    android:layout_alignTop="@id/btn_commit"
	    android:paddingTop="10dp"
	    android:text="结果:"
	    android:textSize="20sp"/>

</RelativeLayout>
