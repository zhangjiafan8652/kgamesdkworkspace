<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snail_tip_bg_all"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/alert_dialog_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/alert_dialog_text_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="40dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#7f7d7d" />

    <LinearLayout
        android:id="@+id/alert_dialog_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/alert_dialog_button_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/snail_tip_alert_dialog_bg"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@drawable/snail_tip_alert_dialog_text" />

        <View
            android:id="@+id/alert_dialog_split"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#7f7d7d" />

        <Button
            android:id="@+id/alert_dialog_button_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/snail_tip_alert_dialog_bg"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@drawable/snail_tip_alert_dialog_text" />
    </LinearLayout>

</LinearLayout>