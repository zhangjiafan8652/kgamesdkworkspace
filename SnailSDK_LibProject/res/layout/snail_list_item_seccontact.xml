<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rank_bg_color"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/text_first_letter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="A"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="5dp" >

        <TextView
            android:id="@+id/text_first_name"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/snail_background_round"
            android:gravity="center"
            android:text="赵"
            android:textColor="@color/white"
            android:textSize="18sp" />
        
        
        <ImageView
            android:id="@+id/img_selected"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/snail_background_round"
            android:scaleType="centerInside"
            android:src="@drawable/snail_contact_selected" />
        
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="12sp"
            android:text="赵日天都"
            android:textColor="@color/login_little_text" />

        <TextView
            android:id="@+id/text_num"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:text="18656879561"
            android:textSize="14sp"
            android:textColor="@color/login_edit_color"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>