<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/snail_gift_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/snail_freestore_logo"
         />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginLeft="12dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/snail_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/snail_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#817e7e"
            android:layout_marginTop="12dp"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/snail_get_gift"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:text="@string/snail_getgift"
        android:layout_marginRight="18dp"
        android:textColor="#ffffff"
        android:background="#6dc343"
        android:textSize="12sp"
        android:gravity="center"
        android:textStyle="bold" />

</LinearLayout>