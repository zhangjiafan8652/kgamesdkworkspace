<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="@string/snail_catpcha_dialog_title"
            android:textColor="#4dbd21"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/snail_captcha_dialog_close"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/snail_getgift_close"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4dbd21" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="36dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/snail_catpcha_dialog_captcha"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:hint="@string/snail_game_card_captcha_hint"
            style="@style/snail_style_textview_basic"
            android:background="@drawable/snail_buy_cancel_normal"
            />
        <ImageView
            android:id="@+id/snail_catpcha_dialog_captcha_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/snail_catpcha_dialog_validate"
        style="@style/snail_style_button_green_h"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:text="@string/snail_catpcha_dialog_validate" />


</LinearLayout>