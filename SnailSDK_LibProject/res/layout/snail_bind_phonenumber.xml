<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rank_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_background" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/snail_bind_phone_number"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/snail_back_bg"
            android:onClick="onClick" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#c7cbd5" >
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/snail_phonenumber_input_phonenum_edt"
            style="@style/snail_style_textview_round_top_h"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/snail_margin_top_title"
            android:text="@string/snail_input_phone_number"/>

        <Button
            android:id="@+id/snail_gain_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:text="@string/snail_gain_check"
            android:textColor="@color/title_background" />

        <EditText
            android:id="@+id/snail_input_check_edt"
            style="@style/snail_style_textview_round_bottom_h"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:text="@string/snail_reg_check"/>

        <Button
            android:id="@+id/bind_phone_btn"
            style="@style/snail_style_button_green_h"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="24dp"
            android:text="@string/snail_confirm_bind"/>
    </LinearLayout>

</LinearLayout>
