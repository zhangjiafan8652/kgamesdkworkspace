            <!-- <TextView -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:text="@string/snail_login_warmtip1" -->
            <!-- android:textColor="@color/login_little_text" -->
            <!-- android:textSize="12sp" /> -->
            <!-- </LinearLayout> -->


            <!-- </RelativeLayout> -->
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>