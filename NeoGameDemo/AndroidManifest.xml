<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.nubia.nbgame.sdk"
    android:versionCode="5"
    android:versionName="2.0.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="cn.nubia.nbgame.demo.SdkApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.nubia.nbgame.demo.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="standard"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 联运Activity start -->
        <activity
            android:name="cn.nubia.nbgame.sdk.ui.ShowActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowBackground="@null" />
        <!-- 联运Activity end -->


        <!-- 支付组件Activity start -->
        <activity
            android:name="cn.nubia.componentsdk.ui.ShowActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowBackground="@null" >
        </activity>
        <activity
            android:name="cn.nubia.componentsdk.ui.CheckActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowBackground="@null" >
        </activity>
        <!-- 支付组件Activity end -->


        <!-- 联运Service start -->
        <service
            android:name="cn.nubia.nbgame.sdk.service.GameService"
            android:exported="true" >
        </service>
        <!-- 联运Service end -->
    </application>

</manifest>