<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pyw_common_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pyw_dp_36"
    android:paddingRight="@dimen/pyw_dp_36"
    android:paddingTop="@dimen/pyw_dp_120" >

    <LinearLayout
        android:id="@+id/pyw_layout_phoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pyw_dp_72"
        android:background="@drawable/pyw_selector_edittext_bg" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/pyw_img_phone_icon" />

        <EditText
            android:id="@+id/pyw_et_register_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/pyw_regex_code"
            android:hint="请输入您的手机号码"
            android:inputType="phone"
            android:padding="@dimen/pyw_dp_21"
            android:singleLine="true"
            android:textColor="@color/pyw_common_gray_darker"
            android:textColorHint="@color/pyw_common_hint_color_dark"
            android:textSize="@dimen/pyw_common_medium" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/pyw_btn_getcode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pyw_common_btn_height"
        android:layout_marginTop="@dimen/pyw_dp_102"
        android:background="@drawable/pyw_selector_btn_blue_bg"
        android:text="获取验证码"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pyw_common_large" />

    <LinearLayout
        android:id="@+id/pyw_layout_mianze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/pyw_tv_mianze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免责声明"
            android:textColor="#338FCC"
            android:textSize="@dimen/pyw_common_small" />

        <CheckBox
            android:id="@+id/pyw_cb_mianze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:text="已阅读"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/pyw_tv_other_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="@color/pyw_common_hint_color_dark"
        android:textSize="@dimen/pyw_common_medium" />

</LinearLayout>