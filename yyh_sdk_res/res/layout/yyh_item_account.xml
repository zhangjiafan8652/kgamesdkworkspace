    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/yyh_delete" />

</LinearLayout>