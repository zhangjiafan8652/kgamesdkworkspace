<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_login_captcha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="44dp">

    <EditText
        android:id="@+id/captcha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yyh_edittext_bg"
        android:hint="请输入验证码"
        android:inputType="number"
        android:maxLength="4"
        android:paddingRight="70dp"
        android:textSize="14dp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage" />

    <Button
        android:id="@+id/get_captcha"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/yyh_btn_blue_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="获取验证码"
        android:textColor="@color/yyh_white"
        android:textSize="14dp"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
</FrameLayout>