<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tv_header_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/yyh_back"
        android:drawablePadding="10dp"
        android:text="@string/yyh_gsou_login"
        android:textColor="@color/yyh_gray_dark"
        android:textSize="17dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/yyh_gsou_login_notify"
        android:textColor="@color/yyh_black"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/edit_gsou_account"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/yyh_edittext_bg"
        android:inputType="text"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/edit_gsou_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/yyh_edittext_bg"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/yyh_btn_blue_bg"
        android:text="@string/yyh_login"
        android:textColor="@color/yyh_white"
        android:textSize="14dp" />

</LinearLayout>