<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    tools:background="#33ff0000">

    <TextView
        android:id="@+id/tv_header_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:drawableLeft="@drawable/yyh_back"
        android:drawablePadding="10dp"
        android:text="注册"
        android:textColor="@color/yyh_gray_dark"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/edit_register_email"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/yyh_edittext_bg"
        android:hint="请输入邮箱"
        android:inputType="textEmailAddress"
        android:textSize="14dp" />

    <com.appchina.usersdk.CaptchaEditText
        android:id="@+id/edit_register_captcha"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <EditText
        android:id="@+id/edit_register_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/yyh_edittext_bg"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/yyh_btn_blue_bg"
        android:text="注册"
        android:textColor="@color/yyh_white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_registration_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingTop="10dp"
        android:text="注册账号表示您同意《应用汇用户注册协议》"
        android:textSize="11dp" />

</LinearLayout>