<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yyh_corner_white_bg"
    android:paddingBottom="16dp"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    tools:background="#33ff0000">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/yyh_activity_close"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="35dp"
            android:textColor="@color/yyh_black"
            android:textSize="18dp"
            tools:ignore="SpUsage"
            tools:text="绑定手机号" />

        <com.appchina.usersdk.WidgetYYHFormView
            android:id="@+id/yyh_dialog_set_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/yyh_dialog_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/yyh_btn_blue_bg"
            android:textColor="@color/yyh_white"
            android:textSize="14dp"
            tools:ignore="SpUsage"
            tools:text="确认" />

        <TextView
            android:id="@+id/yyh_account_help_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="原手机收不到验证码？加反馈群：471380849"
            android:textColor="@color/yyh_blue"
            android:textSize="12dp"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>
</FrameLayout>