<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#35FFFFFF"
                android:centerColor="#35FFFFFF"
                android:centerY="0.75"
                android:endColor="#35FFFFFF"
                android:angle="270"
                />

            <stroke android:color="#85FFFFFF" android:width="1dp"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#35FFFFFF"
                    android:centerColor="#35FFFFFF"
                    android:centerY="0.75"
                    android:endColor="#35FFFFFF"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#ffb400"
                    android:centerColor="#ffb400"
                    android:centerY="0.75"
                    android:endColor="#ffb400"
                    android:angle="270"
                    />

                <stroke android:color="#15000000" android:width="1dp"/>
            </shape>
        </clip>
    </item>

</layer-list>