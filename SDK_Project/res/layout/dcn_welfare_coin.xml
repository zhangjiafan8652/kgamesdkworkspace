<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:background="@color/dcn_white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/dcn_welfare_coin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/dcn_welfare_coin_title"
            android:drawablePadding="5dp"
            android:text="@string/dcn_welfare_coin"
            android:textColor="#333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/dcn_welfare_coin_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/dcn_welfare_more"
            android:text="@string/dcn_welfare_coin_market"
            android:textColor="#999999"
            android:textSize="10sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f0f0f0"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dcn_shape_welfare_coin_bg"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <com.downjoy.widget.vollyextend.CircleRoundImageView
            android:id="@+id/dcn_welfare_coin_user"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dcn_welfare_coin_user"/>

        <TextView
            android:id="@+id/dcn_welfare_coin_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textColor="#333333"/>
    </LinearLayout>


    <com.downjoy.android.volley.toolbox.NetworkImageView
        android:id="@+id/dcn_welfare_coin_adv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <com.downjoy.android.volley.toolbox.NetworkImageView
        android:id="@+id/dcn_welfare_coin_adv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"/>


    <LinearLayout
        android:id="@+id/dcn_welfare_coin_product"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="-7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dcn_welfare_coin_view1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dcn_welfare_coin_fun1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dcn_welfare_coin_exchange"/>

            <com.downjoy.android.volley.toolbox.NetworkImageView
                android:id="@+id/dcn_welfare_coin_img1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/dcn_welfare_coin_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/dcn_welfare_task_coin"
                android:drawablePadding="5dp"
                android:textColor="#FA8B0A"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dcn_welfare_coin_view2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="7dp"
                android:background="#E5E6E7"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dcn_welfare_coin_fun2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/dcn_welfare_coin_exchange"/>

                <com.downjoy.android.volley.toolbox.NetworkImageView
                    android:id="@+id/dcn_welfare_coin_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/dcn_welfare_coin_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/dcn_welfare_task_coin"
                    android:drawablePadding="5dp"
                    android:textColor="#FA8B0A"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="7dp"
                android:background="#E5E6E7"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dcn_welfare_coin_view3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dcn_welfare_coin_fun3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dcn_welfare_coin_exchange"/>

            <com.downjoy.android.volley.toolbox.NetworkImageView
                android:id="@+id/dcn_welfare_coin_img3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/dcn_welfare_coin_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/dcn_welfare_task_coin"
                android:drawablePadding="5dp"
                android:textColor="#FA8B0A"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>