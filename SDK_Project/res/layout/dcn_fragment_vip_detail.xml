                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/dcn_shape_line_left_transparent" />

                        <TextView
                            android:id="@+id/dcn_tv_privilege_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:text=""
                            android:textColor="#333"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/dcn_shape_line_right_transparent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dcn_v_no_privilege"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="165dp"
                            android:layout_height="110dp"
                            android:src="@drawable/dcn_vip_no_privilege" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#999"
                            android:text="暂无特权"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <android.support.v4.view.ViewPager
                        android:id="@+id/dcn_vp_privilege"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
                </LinearLayout>

                <com.downjoy.widget.IndexView
                    android:id="@+id/dcn_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"></com.downjoy.widget.IndexView>
            </RelativeLayout>

