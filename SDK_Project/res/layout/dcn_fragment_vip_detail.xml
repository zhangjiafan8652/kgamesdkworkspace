<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dcn_rl_content"
        android:layout_width="270dp"
        android:layout_height="320dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/dcn_vip_detail_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#E0E0E0">

                <View
                    android:id="@+id/dcn_vipdetail_progress_svip_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dcn_vipdetail_progress_svip_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp">

                    <ImageView
                        android:id="@+id/dcn_iv_preVipLevel"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/dcn_vip1" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/dcn_iv_currentVipLevel"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/dcn_shape_vipdetail_current_level_bg"
                            android:paddingBottom="8.5dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="8.5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/dcn_vip2" />

                        <View
                            android:id="@+id/dcn_vipdetail_level_status"
                            android:layout_width="44dp"
                            android:layout_height="13dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/dcn_vipdetail_current_level_svip" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/dcn_iv_nextVipLevel"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/dcn_vip3" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="25dp"
                    android:layout_marginRight="14dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/dcn_tv_vipProgress"
                                android:layout_width="27dp"
                                android:layout_height="13dp"
                                android:background="@drawable/dcn_videtail_progress_text_svip_bg"
                                android:gravity="center_horizontal"
                                android:text="20"
                                android:textColor="#A5804E"
                                android:textSize="8dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/dcn_pb_vipProgress"
                                style="@style/dcn_account_ProgressBar"
                                android:layout_width="120dp"
                                android:layout_height="3dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/dcn_progress_detail_svip" />

                            <TextView
                                android:id="@+id/dcn_tv_vipProgress2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="100"
                                android:textColor="#A5804E"
                                android:textSize="8dp" />

                            <View
                                android:id="@+id/dcn_see_vipdetail"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/dcn_vipdetail_svip_info" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/dcn_iv_preLevel"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/dcn_vipdetail_pre_svip" />

                <ImageView
                    android:id="@+id/dcn_iv_nextLevel"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/dcn_vipdetail_next_svip" />
            </RelativeLayout>


