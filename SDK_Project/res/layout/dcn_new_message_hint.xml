<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dcn_dialog_common_width"
    android:layout_height="wrap_content"
    android:background="@drawable/dcn_new_message"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.downjoy.widget.vollyextend.CircleRoundImageView
                android:id="@+id/dcn_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="6dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:src="@drawable/dcn_logo" />

            <TextView
                android:id="@+id/dcn_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:layout_gravity="center_vertical"
                android:text="当乐活动大使"
                android:textColor="#2f0300"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/dcn_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:lines="1"
            android:text="当乐活动大使当乐活动大使当乐活动大使当乐活动大使当乐活动大使当乐活动大使当乐活动大使当乐活动大使"
            android:textColor="#333333"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dcn_new_msg_media_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/dcn_new_msg_video_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dcn_new_msg_media_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:textSize="13sp"
                android:textColor="#240000"
                />
            <TextView
                android:id="@+id/dcn_new_msg_media_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#240000"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/dcn_new_msg_audio_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="15sp"
            android:textColor="#240000"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/dcn_new_msg_media_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@drawable/dcn_video_play_hint"
            android:scaleType="center"
            />
    </LinearLayout>
    <Button
        android:id="@+id/dcn_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dcn_message_popup_close1" />
</LinearLayout>