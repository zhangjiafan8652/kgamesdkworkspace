<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dcn_message_common_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dcn_title_height"
    android:background="@drawable/dcn_web_title_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/dcn_message_ll_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/dcn_actionbar_close_iv"
            android:layout_width="38dp"
            android:layout_height="@dimen/dcn_title_height"
            android:layout_gravity="center"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/dcn_selector_actionbar_btn"
            android:src="@drawable/dcn_actionbar_back"
            android:scaleType="fitCenter"/>

        <View
            android:layout_width="@dimen/dcn_divider_size"
            android:layout_height="20dp"
            android:background="#30ffffff"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/dcn_message_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/dcn_message_center"
            android:textColor="@color/dcn_white"
            android:textSize="16sp" />

        <View
            android:layout_width="@dimen/dcn_divider_size"
            android:layout_height="20dp"
            android:background="#30ffffff"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/dcn_message_setting_img"
            android:layout_width="38dp"
            android:layout_height="@dimen/dcn_title_height"
            android:layout_gravity="center"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/dcn_selector_actionbar_btn"
            android:src="@drawable/dcn_message_setting"
            android:scaleType="fitCenter"/>
    </LinearLayout>
</LinearLayout>
