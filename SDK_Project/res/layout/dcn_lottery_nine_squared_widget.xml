<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:background="@drawable/dcn_lottery_9_bg">


    <ImageView
        android:id="@+id/dcn_lottery_9_bg_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dcn_lottery_9_border_bg_0"/>

    <ImageView
        android:id="@+id/dcn_lottery_9_bg_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dcn_lottery_9_border_bg_1"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.downjoy.widget.LotteryNineItemView
                android:id="@+id/dcn_lottery_9_item_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/dcn_lottery_9_item"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.downjoy.widget.LotteryNineItemView
                android:id="@+id/dcn_lottery_9_item_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/dcn_lottery_9_item"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.downjoy.widget.LotteryNineItemView
                android:id="@+id/dcn_lottery_9_item_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/dcn_lottery_9_item"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.downjoy.widget.LotteryNineItemView
                android:id="@+id/dcn_lottery_9_item_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/dcn_lottery_9_item"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <View
                android:layout_width="70dp"
                android:layout_height="70dp"/>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.downjoy.widget.LotteryNineItemView
                android:id="@+id/dcn_lottery_9_item_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/dcn_lottery_9_item"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.downjoy.widget.LotteryNineItemView
                android:id="@+id/dcn_lottery_9_item_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/dcn_lottery_9_item"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.downjoy.widget.LotteryNineItemView
                android:id="@+id/dcn_lottery_9_item_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/dcn_lottery_9_item"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.downjoy.widget.LotteryNineItemView
                android:id="@+id/dcn_lottery_9_item_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/dcn_lottery_9_item"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>