<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dcn_annview_content"
    android:layout_width="@dimen/dcn_dialog_common_width"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:visibility="visible">

    <include layout="@layout/dcn_dialog_common_titlebar"/>

    <!--<com.downjoy.widget.DashedLine-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_marginBottom="4dp"-->
    <!--android:layout_marginTop="10dp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp">
        <WebView
            android:id="@+id/dcn_content"
            style="@style/dcn_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:overScrollMode="never"
            android:padding="0dp"
            android:scrollbars="none" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/dcn_detail"
                    android:layout_width="@dimen/dcn_dialog_common_btn_width"
                    android:layout_height="@dimen/dcn_dialog_common_btn_height"
                    android:background="@drawable/dcn_selector_dialog_btn"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/dcn_detail"
                    android:textColor="@color/dcn_orange_common"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/dcn_interval_1"
                    android:layout_width="45dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/dcn_next"
                    android:layout_width="@dimen/dcn_dialog_common_btn_width"
                    android:layout_height="@dimen/dcn_dialog_common_btn_height"
                    android:background="@drawable/dcn_selector_dialog_btn"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/dcn_ann_kown"
                    android:textColor="@color/dcn_orange_common"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>