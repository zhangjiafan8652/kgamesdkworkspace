<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dcn_widget29"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="2dp"
    android:paddingBottom="8dp"
    android:gravity="center">

    <TextView
        android:id="@+id/dcn_float_menu_item_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dcn_float_menu_item_iv"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:lines="1"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="12sp" >
    </TextView>

    <com.downjoy.android.volley.toolbox.NetworkImageView
        android:id="@+id/dcn_float_menu_item_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </com.downjoy.android.volley.toolbox.NetworkImageView>

    <TextView
        android:id="@+id/dcn_float_menu_new_msg_iv"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/dcn_float_menu_item_iv"
        android:layout_marginTop="5dp"
        android:text="3ä¸ª"
        android:gravity="center"
        android:textColor="@color/dcn_white"
        android:textSize="10dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/dcn_message_hint_blue"
        android:visibility="invisible" />
</RelativeLayout>