<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dcn_logining_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:singleLine="true"
        android:maxLength="19"
        android:maxEms="9"
        android:ellipsize="end"
        android:text="username"
        android:textColor="@color/dcn_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dcn_last_zone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:singleLine="true"
        android:text="@string/dcn_select_account_last_zone_name_none"
        android:textColor="@color/dcn_account_remark_text"
        android:textSize="13sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/dcn_login_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="48dp"
        android:background="@null"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="@string/dcn_logining"
        android:textColor="@color/dcn_white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/dcn_login_change_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/dcn_selector_login_btn"
        android:singleLine="true"
        android:text="@string/dcn_logining_change_user"
        android:textColor="@color/dcn_white"
        android:textSize="14sp"
        android:visibility="gone"/>
</LinearLayout>
