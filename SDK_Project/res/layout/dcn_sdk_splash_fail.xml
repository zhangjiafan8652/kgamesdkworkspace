<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_img"
        android:layout_gravity="center_horizontal"
        android:text="@string/dcn_init_message_failed"
        android:textColor="#ccc"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dcn_splash_tv_retry_main"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:background="@drawable/dcn_selector_btn_gray"
            android:gravity="center"
            android:text="@string/dcn_splash_retry"
            android:textColor="#aaa"
            android:textSize="14sp" />

        <View
            android:layout_width="30dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/dcn_splash_tv_reserveLine"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:background="@drawable/dcn_selector_btn_gray"
            android:gravity="center"
            android:text="@string/dcn_splash_reserveLine"
            android:textColor="#aaa"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
