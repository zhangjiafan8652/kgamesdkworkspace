<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hide_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gfan_login_layout_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="翻一翻可以隐藏/显示小图标"
        android:textColor="#fff"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/gfan_floatview_icon" />

    <CheckBox
        android:id="@+id/hide_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:button="@drawable/gfan_check_selector"
        android:paddingLeft="5dp"
        android:text="不在显示"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hide_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gfan_btn_dark_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="取消"

            android:textColor="#fff" />

        <TextView
            android:id="@+id/hide_tv_hide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/gfan_blue_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="隐藏"
            android:textColor="#fff" />

    </LinearLayout>
</LinearLayout>