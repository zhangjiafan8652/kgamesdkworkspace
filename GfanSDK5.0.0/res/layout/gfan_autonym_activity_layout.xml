<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/gfan_bg"
    android:orientation="vertical">

    <TextView
        style="@style/gfan_title_style"
        android:text="实名认证" />

    <EditText
        android:id="@+id/et_name"
        style="@style/gfan_edit_style"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/gfan_uc_view_space"
        android:hint="姓名(2~15为中文字符)"
        android:maxLength="15" />

    <EditText
        android:id="@+id/et_id"
        style="@style/gfan_edit_style"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/gfan_uc_view_space"
        android:hint="身份证号(18位)"
        android:maxLength="18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gfan_edit_layout_height"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/gfan_uc_view_space"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/gfan_yellow_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="@dimen/gfan_btn_text_size" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/gfan_blue_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="@dimen/gfan_btn_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gfan_uc_view_space_small"
        android:textColor="@color/gfan_col_ffffff"
        tools:text="请尽快完成实名认证" />
</LinearLayout>