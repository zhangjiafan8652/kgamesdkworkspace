                />-->

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp117"
            android:layout_marginTop="@dimen/dp57"
            android:gravity="center_vertical"
            android:background="@drawable/papasdk_papalogin_editback"
            android:id="@+id/relativeLayout"
            >

        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/newPass2"
                android:paddingLeft="@dimen/dp150"
                android:textSize="@dimen/sp40"
                android:textColorHint="#c4c4c4"
                android:hint="确认密码"
                android:textColor="#3c3c3c"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:maxLength="16"
                />

        <ImageView
                android:layout_width="@dimen/dp57"
                android:layout_height="wrap_content"
                android:id="@+id/adview"
                android:src="@drawable/papasdk_papalogin_passicon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp36"
                />

        <TextView
                android:layout_width="@dimen/dp1"
                android:layout_height="@dimen/dp52"
                android:text="New Text"
                android:id="@+id/textView2"
                android:background="#c4c4c4"
                android:layout_toRightOf="@+id/adview"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp36"
                />

