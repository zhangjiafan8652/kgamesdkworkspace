<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="20dp"
              android:background="@drawable/papasdk_shape_send_loading_bg"
              android:gravity="center"
              android:layout_gravity="center">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/forum_send_loading_container"
                  android:visibility="visible"
            >
        <ProgressBar
                android:id="@+id/mg_loading"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:indeterminateDrawable="@drawable/papasdk_loding_progress"
                android:indeterminateDuration="1000"
                />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="120dp"
                  android:layout_height="90dp"
                  android:gravity="center"
                  android:id="@+id/forum_send_success_container"
                  android:visibility="gone"
            >
        <ImageView
                android:id="@+id/mg_loading_success"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/papasdk_tip_success"
                />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="发送成功"
                  android:textColor="@color/white"
                  android:textSize="12sp"
                  android:layout_marginTop="10dp"
                  android:id="@+id/forum_send_success_tv"
                />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="120dp"
                  android:layout_height="90dp"
                  android:gravity="center"
                  android:id="@+id/forum_send_failed_container"
                  android:visibility="gone"
            >
        <ImageView
                android:id="@+id/mg_loading_failed"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/papasdk_tip_failed"
                />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="发送失败"
                  android:id="@+id/forum_send_failed_tv"
                  android:textColor="@color/white"
                  android:textSize="12sp"
                  android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>