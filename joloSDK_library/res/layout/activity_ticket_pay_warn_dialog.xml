<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

    <!-- 警告对话框view  默认是gone -->

    <LinearLayout
       
        android:id="@+id/warn_dialog_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_shape_rect"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/ticket_warn_dialog_desc"
            android:textColor="@color/cmmn_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                 android:textSize="16dp"
                android:id="@+id/warn_cancel_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_gray_shape_rect"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/volume_dialog_cancle"
                android:textColor="@android:color/white" />

            <TextView
                 android:textSize="16dp"
                android:id="@+id/warn_ok_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_shape_rect"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/volume_dialog_ok"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>