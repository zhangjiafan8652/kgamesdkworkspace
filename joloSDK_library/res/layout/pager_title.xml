<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:gravity="center_vertical"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/current_pager_selector"
         >

        <TextView
            android:id="@+id/pager_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:paddingTop="1dp"
            android:paddingBottom="5dp"
            android:textColor="@color/vpi_black"
            android:gravity="center"
            android:text="TextView" />


        <ImageView
            android:id="@+id/pager_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pager_title"
            android:layout_toRightOf="@+id/pager_title"
            android:src="@drawable/detail_cirle"
            android:visibility="gone"
             />
    </RelativeLayout>


</LinearLayout>