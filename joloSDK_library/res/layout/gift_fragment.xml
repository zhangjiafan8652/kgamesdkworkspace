<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/jolo_theme_blue" >

            <ImageView
                android:id="@+id/iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/jolopay_back" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/iv"
                android:text="@string/back"
                android:textColor="#FFF"
                android:textSize="18sp" />
        </RelativeLayout>
    <!-- <com.jolosdk.home.ui.widget.viewpagerindicator.TabPageIndicator
        android:id="@+id/tab_indicator1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabBackground="@android:color/white"
        app:textColor="@color/color_tv"
        app:textFBackground="@drawable/game_rank_tab_checknew"
        app:textFocusColor="@color/cmmn_blue"
        app:textPadingButtom="6dp"
        app:textPadingTop="3dp" /> -->
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ticket_store_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ticket_store_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/gift_list"
                android:textColor="@color/cmmn_blue"
                android:textSize="16sp" />

            <View
                android:id="@+id/ticket_store_view"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/cmmn_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ticket_usable_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ticket_usable_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/my_gift"
                android:textColor="@color/cmmn_gray"
                android:textSize="16sp" />

            <View
                android:id="@+id/ticket_usable_view"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/cmmn_blue"
                android:visibility="invisible" />
        </LinearLayout>

        
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/myvolume_pager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

</LinearLayout>