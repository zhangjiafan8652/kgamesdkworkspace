<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jolopay_title"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/cmmn_blue"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/jolopay_back_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/jolopay_back" />

    <TextView
        android:id="@+id/jolopay_title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:text="@string/jolopay_gbao_recharge_title"
        android:textColor="@color/jolopay_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/jolopay_title_pesoncenter_tv"
        android:layout_marginRight="10dp"
     android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/back_person_center"
        android:textSize="16sp"
        android:textColor="@color/jolopay_white"/>

</RelativeLayout>