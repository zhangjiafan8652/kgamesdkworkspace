<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="6dip"
        android:paddingBottom="2dip" >

        <ImageView
            android:id="@+id/gift_listing_iv"
            android:layout_width="75dp"
            android:layout_height="@dimen/icon_wh"
            android:layout_marginLeft="6.6dp"
            android:layout_marginTop="5.6dip"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/gift_listing_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/gift_listing_iv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/gift_listing_iv"
            android:orientation="vertical"
            android:paddingTop="0dip" >

            <TextView
                android:id="@+id/gift_listing_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="刀塔之刃"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/download_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="剩余："
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/gift_listing_lastcount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="888个"
                    android:textColor="@color/cmmn_black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/gift_listing_iv"
            android:layout_marginTop="2dp"
            android:background="#a0a0a0" />
    </RelativeLayout>

</RelativeLayout>