<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/vocher_item_rl"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@drawable/voucher_bg"
            android:gravity="center"
            android:padding="4dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bg_big_explain_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mygift_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vocher_item_rl"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/vocher_item_rl"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ticket_name_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/cmmn_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ticket_sale_amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥50"
                    android:textColor="@color/cmmn_red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ticket_real_amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="100"
                    android:textColor="@color/cmmn_red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/remain_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="剩余%50"
                    android:textColor="@color/cmmn_blue" />
            </LinearLayout>

            <TextView
                android:id="@+id/about_lasttime_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
              
                android:textColor="@color/cmmn_black" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ProgressBar
                    android:id="@+id/remain_progressbar"
                    android:layout_width="85dip"
                    android:layout_height="4dip"
                    android:layout_margin="8dip"
                    android:layout_toRightOf="@+id/gift_progress_tv"
                    android:indeterminate="false"
                    android:indeterminateOnly="false"
                    android:progress="50"
                    android:progressDrawable="@drawable/gift_progressbar_layer"
                    android:secondaryProgress="100"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/buy_tv"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_red_shape_rect"
            android:padding="4dp"
            android:singleLine="true"
            android:text="立即购买"
            android:textColor="@android:color/white" />
    </LinearLayout>

 

</LinearLayout>