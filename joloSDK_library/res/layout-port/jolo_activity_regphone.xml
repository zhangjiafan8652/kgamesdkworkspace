<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tip_reset_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/jolo_tip_reset_pwd"
        android:textColor="@color/cmmn_gray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/reginputphone_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="@drawable/jolo_edit_bg"
            android:digits="@string/jolo_register_digits"
            android:gravity="center_vertical"
            android:hint="@string/jolo_input_phone"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="9dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="9dp"
            android:singleLine="true"
            android:textColor="@color/color_tv"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

        <Button
            android:id="@+id/fetch_code_btn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.4"
            android:background="@drawable/btn_orange_shape_rect"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            android:text="@string/jolo_fetchcode"
            android:textColor="@color/jolo_white"
            android:textSize="15sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/reginput_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/jolo_edit_bg"
        android:digits="@string/jolo_register_digits"
        android:gravity="center_vertical"
        android:hint="@string/jolo_input_code"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="6"
        android:paddingBottom="9dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="9dp"
        android:singleLine="true"
        android:textColor="@color/color_tv"
        android:textColorHint="@color/hint_color"
        android:textCursorDrawable="@null"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/reginput_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/jolo_edit_bg"
        android:digits="@string/jolo_register_digits"
        android:gravity="center_vertical"
        android:hint="@string/jolo_modifypwd_hint_new_pwd"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingBottom="9dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="9dp"
        android:singleLine="true"
        android:textColor="@color/color_tv"
        android:textColorHint="@color/hint_color"
        android:textCursorDrawable="@null"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/reginput2_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/jolo_edit_bg"
        android:digits="@string/jolo_register_digits"
        android:gravity="center_vertical"
        android:hint="@string/jolo_modifypwd_hint_new_pwd_again"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingBottom="9dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="9dp"
        android:singleLine="true"
        android:textColor="@color/color_tv"
        android:textColorHint="@color/hint_color"
        android:textCursorDrawable="@null"
        android:textSize="15sp" />

    <Button
        android:id="@+id/regok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_blue_shape_rect"
        android:gravity="center"
        android:padding="7dp"
        android:text="@string/jolo_reg_phone"
        android:textColor="@color/jolo_white"
        android:textSize="18sp" />

</LinearLayout>