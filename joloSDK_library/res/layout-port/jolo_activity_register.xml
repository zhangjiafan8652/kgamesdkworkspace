<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <!-- 账号 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/jolo_edit_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="11dp" >

        <EditText
            android:id="@+id/register_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:digits="@string/jolo_register_digits"
            android:gravity="center_vertical"
            android:hint="@string/jolo_register_name_hint"
            android:imeOptions="actionNext"
            android:inputType="textVisiblePassword"
            android:maxLength="20"
            android:paddingLeft="7dp"
            android:paddingTop="9dp"
            android:paddingRight="7dp"
            android:paddingBottom="9dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/color_tv"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />
    </LinearLayout>
    <!-- 密码 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/jolo_edit_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="11dp" >
		
        <EditText
            android:id="@+id/register_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:digits="@string/jolo_register_digits"
            android:hint="@string/jolo_register_pwd_hint"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="7dp"
            android:paddingTop="9dp"
            android:paddingRight="7dp"
            android:paddingBottom="9dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="@color/color_tv"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />
    </LinearLayout>
    <!-- check密码 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/jolo_edit_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="11dp" >
		
        <EditText
            android:id="@+id/register_check_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:digits="@string/jolo_register_digits"
            android:hint="@string/jolo_modifypwd_hint_new_pwd_again"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="7dp"
            android:paddingTop="9dp"
            android:paddingRight="7dp"
            android:paddingBottom="9dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="@color/color_tv"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />
    </LinearLayout>
    
    <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
	    android:background="@drawable/btn_blue_shape_rect"
         android:gravity="center"
	     android:layout_marginTop="15dp"
         android:paddingTop="8dp"
         android:paddingBottom="8dp"
	     android:onClick="doRegister"
         android:textSize="18sp"
         android:text="@string/jolo_register_register_btn"
         android:textColor="@color/jolo_white" />

</LinearLayout>