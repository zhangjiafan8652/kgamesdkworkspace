<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="popupWindowAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter_left</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_left</item>
    </style>

    <style name="popupWindowRightAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter_right</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_right</item>
    </style>

   	<style name="mycheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
	   	<item name="android:button">@drawable/checkbox_selector</item>
	   	<item name="android:paddingLeft">10.0dip</item>
	   	<item name="android:height">35.0dip</item>
	</style>
	
   	<style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
    
   	<style name="mProgress_circle">  
	    <item name="android:indeterminateDrawable">@drawable/progressbar_circle_1</item>  
	    <item name="android:minWidth">25dp</item>  
	    <item name="android:minHeight">25dp</item>  
	    <item name="android:maxWidth">60dp</item>  
	    <item name="android:maxHeight">60dp</item>  
	</style>
	
   	 
    <style name="Theme.Translucent" parent="android:style/Theme.Translucent">  
       <item name="android:windowBackground">@color/transparentt</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:colorForeground">#fff</item>  
    </style>  
</resources>