<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sina_game_progress_dlg_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sina_game_ever_loading_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:minWidth="100dip"
    android:minHeight="100dip"
    android:padding="16dp" >

    <ImageView
        android:id="@+id/sina_game_progressdialog_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sina_game_ever_pb" />

    <TextView
        android:id="@+id/sina_game_loadingmsg_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>