<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sina_game_exit_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sina_game_exit_dialog_linerlayout"
        android:layout_width="300dip"
        android:layout_height="150dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/sina_game_ever_exit_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sina_game_exit_confirmtext_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dip"
            android:gravity="center_vertical"
            android:textColor="#494949"
            android:textSize="18dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sina_game_exit_confirm_button"
                android:layout_width="0dip"
                android:layout_height="45dip"
                android:layout_marginTop="32dip"
                android:layout_marginRight="4dip"
                android:layout_weight="1"
                android:background="@drawable/sina_game_ever_exit_cancel_button_selector"
                android:textColor="#000000" />

            <Button
                android:id="@+id/sina_game_exit_cancel_button"
                android:layout_width="0dip"
                android:layout_height="45dip"
                android:layout_marginTop="32dip"
                android:layout_marginLeft="4dip"
                android:layout_weight="1"
                android:background="@drawable/sina_game_ever_exit_confirm_button_selector"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>