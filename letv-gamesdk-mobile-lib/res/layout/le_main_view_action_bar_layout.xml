<?xml version="1.0" encoding="utf-8"?>
<com.le.legamesdk.widget.LeMainViewActionBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/le_main_view_action_bar_back"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitCenter"
         />

    <TextView
        android:id="@+id/le_main_view_action_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/c333333"
        android:layout_centerInParent="true"
        android:textSize="@dimen/lepay_tv_password_dialog_forget_password_15.0sp"
        />
    <ImageView
        android:id="@+id/le_main_view_action_bar_close"
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/sdk_button_close_bg" />

    <View
        android:id="@+id/le_main_view_action_bar_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/le_border_line_color" />

</com.le.legamesdk.widget.LeMainViewActionBar>