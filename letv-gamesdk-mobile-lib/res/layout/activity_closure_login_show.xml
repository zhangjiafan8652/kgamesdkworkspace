<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_certification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_80">

    <com.le.legamesdk.widget.LeMainViewParent
        android:id="@+id/le_mian_view_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/sdk_closure_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/alter_corner">

            <ImageView
                android:id="@+id/sdk_closure_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:src="@drawable/sdk_button_close_bg"/>

            <ImageView
                android:id="@+id/sdk_closure_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="37dp"
                android:src="@drawable/closure_bg" />

            <TextView
                android:id="@+id/sdk_closure_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sdk_closure_icon"
                android:textSize="19sp"
                android:layout_marginTop="20dp"
                android:textColor="#333333"
                android:layout_centerHorizontal="true"
                android:text="封停通知"/>

            <TextView
                android:id="@+id/sdk_closure_content_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sdk_closure_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.5"
                android:text="亲爱的玩家，近期发现有个别用户在
游戏中快速提升属性。这极大的影响来了其他正常游戏，感谢所有玩家的支持和配合。"
                android:textColor="#666666"
                android:textSize="16sp" />
        </RelativeLayout>

    </com.le.legamesdk.widget.LeMainViewParent>

</RelativeLayout>
