<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <include
        android:id="@+id/floating_btns_left"
        layout="@layout/floating_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/floating_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/floating_btns_left"
        android:background="@drawable/letv_logo"/>

    <include
        android:id="@+id/floating_btns_right"
        layout="@layout/floating_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/floating_imageView"
        android:visibility="gone"/>
</RelativeLayout>
