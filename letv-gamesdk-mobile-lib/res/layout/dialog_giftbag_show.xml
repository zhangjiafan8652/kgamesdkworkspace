<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="276dp"
    android:layout_height="184dp"
    android:orientation="vertical"
    android:background="@drawable/alter_corner">

    <Button
        android:id="@+id/giftbag_dialog_colse"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/sdk_button_close_bg"
        android:layout_gravity="right"
        android:layout_marginTop="9dp"
        android:layout_marginRight="9dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/lepay_tv_password_dialog_forget_password_15.0sp"
        android:textColor="@color/sdk_tv_giftbag_font_hinttitle_color"
        android:layout_marginTop="9dp"
        android:text="@string/sdk_giftbag_gethit_success"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="9dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lepay_common_dialog_13.0sp"
            android:textColor="@color/sdk_tv_giftbag_font_hinttext_color"
            android:text="@string/sdk_giftbag_code"/>
        <TextView
            android:id="@+id/giftbag_dialog_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lepay_common_dialog_13.0sp"
            android:singleLine="true"
            android:textColor="@color/sdk_tv_giftbag_font_hintnum_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lepay_common_dialog_13.0sp"
            android:textColor="@color/sdk_tv_giftbag_font_hinttext_color"
            android:text="@string/sdk_giftbag_validtime"
            />
        <TextView
            android:id="@+id/giftbag_dialog_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lepay_common_dialog_13.0sp"
            android:textColor="@color/sdk_tv_giftbag_font_hinttext_color"
            android:text=" "/>
        <TextView
            android:id="@+id/giftbag_dialog_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lepay_common_dialog_13.0sp"
            android:textColor="@color/sdk_tv_giftbag_font_hinttext_color"
            android:text=" "/>
    </LinearLayout>
    <Button
        android:id="@+id/giftbag_dialog_copecode_bt"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:textColor="@color/lepay_white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/lepay_common_dialog_13.0sp"
        android:background="@drawable/btn_giftbag_seletor"
        android:text="@string/sdk_giftbag_copycode"/>


</LinearLayout>
