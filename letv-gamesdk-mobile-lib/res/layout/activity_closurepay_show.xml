<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/transparent_80">

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alter_corner"
        android:orientation="vertical">

        <Button
            android:id="@+id/sdk_closure_paycolse"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/sdk_button_close_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:background="@drawable/closure_warning" />

            <TextView
                android:id="@+id/sdk_closure_paycontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="28dp"
                android:text="亲爱的玩家，近期发现有个别用户在
游戏中快速提升属性。这极大的影响来了其他正常游戏，感谢所有玩家的支持和配合。"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
