<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="112dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/yxf_shouji" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:background="@null"
                android:hint="请输入手机号码"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/blacks" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/yxf_suotou" />


            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:background="@null"
                android:hint="请输入密码"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="16"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textColorHint="@color/gray"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/blacks" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_code_log"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/yxf_duanxin" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="4"
                android:paddingLeft="5dip"
                android:paddingRight="85dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textColorHint="@color/gray"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_send_code"
                android:layout_width="75dip"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/sdk_btn_stroke"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/blacks" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/sessionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="sessionId"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_game_in"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/sdk_login_in"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="完成注册"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>
