<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/com_lenovo_lsf_pay_appcolor"
	android:orientation="vertical" >

	<ImageView 
	    android:id="@+id/result_icon"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_marginTop="60dp"
	    android:src="@drawable/com_lenovo_lsf_pay_verify_icon"
	    android:contentDescription="@null"/> 
	    
	<TextView 
		android:id="@+id/result_tv_checking"
		android:layout_below="@id/result_icon"
		android:layout_gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="18sp"
		android:textColor="#191919"
		android:text="@string/com_lenovo_lsf_pay_charge_progress_checking"
		android:layout_marginTop="12dp"/>  
		
	<TextView 
		android:id="@+id/result_charging_description"
		android:layout_below="@id/result_tv_checking"
		android:layout_gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
	    android:textSize="14sp"
		android:textColor="#757575"
		android:text="@string/com_lenovo_lsf_pay_result_charging_desc"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="10dp"/> 
		
	<TextView 
		android:id="@+id/result_not_account"
		android:visibility="invisible"
		android:layout_below="@id/result_charging_description"
		android:layout_gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="left"
	    android:textSize="14sp"
		android:textColor="#757575"
		android:text="@string/com_lenovo_lsf_pay_result_not_account_desc"
		android:layout_marginLeft="60dp"
		android:layout_marginRight="60dp"
		android:layout_marginTop="10dp"/> 
		
	<TextView 
		android:id="@+id/result_kefu"
		android:visibility="invisible"
		android:layout_below="@id/result_not_account"
		android:layout_gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
	    android:textSize="14sp"
		android:textColor="#757575"
		android:text="@string/com_lenovo_lsf_pay_result_kefu"
		android:layout_marginLeft="50dp"
		android:layout_marginRight="50dp"
		android:layout_marginTop="14dp"/> 
	
	<TextView 
		android:id="@+id/result_description_tv"
		android:layout_above="@+id/btn_result1_container"
		android:layout_gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
	    android:textSize="16sp"
		android:textColor="#757575"
		android:text="@string/com_lenovo_lsf_pay_charge_progress_3m_arrive"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginBottom="18dp"/> 
		
	<LinearLayout 
	    android:id="@id/btn_result1_container"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
	    android:layout_marginLeft="36dp"
	    android:layout_marginRight="36dp"
    	android:orientation="vertical">	
	    <!-- <Button
	         android:id="@+id/btn_result1"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:background="@drawable/com_lenovo_lsf_btn_inter_onekey_selector_up"
	         android:textColor="#ffffff"
	         android:textSize="18sp" 
	         android:text="@string/com_lenovo_lsf_pay_return_to_vb_center"/>   -->
		    <Button
	         android:id="@+id/btn_continue"
	         android:layout_width="fill_parent"
	         android:layout_height="42dp"
	         android:textColor="#ffffff"
	         android:textSize="18sp"
	         android:visibility="gone"
	         android:background="@drawable/com_lenovo_lsf_pay_btn_selector_up"
	         android:text="@string/com_lenovo_lsf_pay_charge_continue"/> 
	     
	       <Button
	         android:id="@+id/btn_auto_return"
	         android:layout_width="fill_parent"
	         android:layout_height="42dp"
	         android:background="@drawable/com_lenovo_lsf_pay_failed_return_btn_selector"
	         android:textColor="#ffffff"
	         android:textSize="18sp"
	         android:clickable="false"/> 

    </LinearLayout>
</RelativeLayout>