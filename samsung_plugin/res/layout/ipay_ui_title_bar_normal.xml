<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_page"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/ipay_title_h"
    android:background="@color/ipay_color_value_7">

    <ImageView
        android:id="@+id/activity_title_bar_left"
        android:layout_width="@dimen/ipay_height_48"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/ipay_ui_back_selector"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/activity_title_bar_close"
        android:layout_width="@dimen/ipay_height_38"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/activity_title_bar_left"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:padding="@dimen/ipay_margin_10"
        android:scaleType="center"
        android:src="@drawable/ipay_title_close"
        android:visibility="gone" />

    <TextView
        android:id="@+id/activity_title_bar_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/ipay_color_value_1"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="10"
        android:layout_marginLeft="@dimen/ipay_margin_5"
        android:layout_marginRight="@dimen/ipay_margin_5"
        android:textSize="@dimen/ipay_text_size_18"
        android:visibility="visible" />

    <TextView
        android:id="@+id/activity_title_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/ipay_margin_10"
        android:text="@string/ipay_title_bar_right"
        android:textColor="@drawable/ipay_ui_title_right_button_selector"
        android:textSize="@dimen/ipay_text_size_14"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/title_img_circle_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ipay_margin_10"
        android:layout_marginRight="@dimen/ipay_margin_5"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/ll_proferential_activity"
        android:src="@drawable/ipay_circle_dot"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_right_activity_msg"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:padding="@dimen/ipay_margin_10"
        android:scaleType="fitXY"
        android:src="@drawable/ipay_ui_vc_des"
        android:visibility="gone" />

</RelativeLayout>