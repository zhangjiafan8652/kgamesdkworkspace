<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/ipay_margin_10"
    android:layout_marginRight="@dimen/ipay_margin_10"
    android:layout_marginTop="@dimen/ipay_margin_50"
    android:gravity="center"
    android:orientation="horizontal"
    >
    <!--画左边的那条线-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:background="@color/ipay_color_value_2_3"
        />
    <TextView
        android:id="@+id/tv_nomore_empty"
        android:layout_marginLeft="@dimen/ipay_margin_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ipay_color_value_4"
        />
    <!--画右边的那条线-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:background="@color/ipay_color_value_2_3"
        />
</LinearLayout>
