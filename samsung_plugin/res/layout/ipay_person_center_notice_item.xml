<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ipay_height_50"
    android:background="@color/ipay_color_value_1">

    <TextView
        android:id="@+id/ipay_notice_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/ipay_margin_10"
        android:paddingRight="@dimen/ipay_margin_10"
        android:textColor="@color/ipay_color_value_6"
        android:textSize="@dimen/ipay_text_size_15" />

    <ImageView
        android:id="@+id/ipay_notice_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@drawable/ipay_ui_right_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"/>

    <View
        android:id="@+id/ipay_notice_item_new_message"
        android:layout_width="@dimen/ipay_height_7"
        android:layout_height="@dimen/ipay_height_7"
        android:layout_toLeftOf="@+id/ipay_notice_right_arrow"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/ipay_margin_10"
        android:background="@drawable/ipay_round_border"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ipay_notice_item_coupon_enable_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ipay_notice_item_new_message"
        android:layout_marginRight="@dimen/ipay_margin_10"
        android:visibility="gone"
        android:textColor="@color/ipay_color_value_4"
        android:textSize="@dimen/ipay_text_size_12" />

    <TextView
        android:id="@+id/ipay_notice_item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ipay_notice_item_coupon_enable_count"
        android:layout_marginRight="@dimen/ipay_margin_10"
        android:gravity="end"
        android:singleLine="true"
        android:ellipsize="end"
        android:visibility="gone"
        android:textColor="@color/ipay_color_value_7_2"
        android:textSize="@dimen/ipay_text_size_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ipay_divid_line_h"
        android:background="@color/ipay_color_value_3_1"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>