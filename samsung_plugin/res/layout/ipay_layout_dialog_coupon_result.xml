<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/ipay_height_50"
                  android:layout_marginBottom="@dimen/ipay_height_50"
                  android:background="@drawable/ipay_bg"
                  android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_convert_coupon_status_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="恭喜您!"
            android:gravity="center"
            android:layout_marginTop="@dimen/ipay_margin_25"
            android:layout_marginBottom="@dimen/ipay_margin_15"
            android:textColor="@color/ipay_color_value_7"
            android:textSize="@dimen/ipay_text_size_15"/>

        <!--content-->
        <ScrollView
            android:id="@+id/sv_dialog"
            android:scrollbarThumbVertical="@drawable/ipay_common_scrollbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

                <!--兑换状态区域-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ipay_margin_10"
                    android:layout_marginRight="@dimen/ipay_margin_10"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dialog_convert_coupon_status_tip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="成功兑换100代金券 \n 预计10分钟到账"
                        android:gravity="center"
                        android:textColor="@color/ipay_color_value_6"
                        android:layout_marginBottom="@dimen/ipay_margin_5"
                        android:layout_marginLeft="@dimen/ipay_margin_10"
                        android:layout_marginRight="@dimen/ipay_margin_10"
                        android:lineSpacingExtra="@dimen/ipay_margin_20"
                        android:textSize="@dimen/ipay_text_size_13"/>


                </LinearLayout>

        </ScrollView>

        <!--dialog底部按钮区域-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ipay_divid_line_h"
            android:background="@color/ipay_color_value_3"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/dialog_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ipay_height_45"
            android:gravity="center"
            android:background="@null"
            android:text="@string/ipay_ensure"
            android:textColor="@color/ipay_color_value_7"
            android:textSize="@dimen/ipay_text_size_15" />

    </LinearLayout>

</FrameLayout>