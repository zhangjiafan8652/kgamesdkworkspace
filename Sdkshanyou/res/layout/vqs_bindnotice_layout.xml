<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="285dp"
    android:layout_height="315dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vqs_login_title_bg" >
        <View
            android:layout_width="0.5dp"
            android:layout_height="0.5dp"
            android:layout_alignParentRight="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/vqs_main_title" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vqs_login_body_bg"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:text="为了账号安全,建议绑定手机"
            android:textColor="@color/vqs_text_black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="可用手机号找回密码"
            android:textColor="@color/vqs_text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vqs_bindnotice_bind_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/vqs_main_text_bg"
            android:gravity="center"
            android:text="立即绑定"
            android:textColor="@color/vqs_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vqs_bindnotice_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="下次再说"
            android:textColor="@color/vqs_main_color" />
    </LinearLayout>

</LinearLayout>