<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/vqs_white"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/vqs_main_color" >

        <TextView
            android:id="@+id/vqs_mygift_activity_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/vqs_main_back"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="礼包中心"
            android:textColor="@color/vqs_white"
            android:textSize="18sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/vqs_mygift_activity_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/vqs_white"
             android:listSelector="#00000000"
            android:divider="@null"
            android:scrollbars="@null" >
        </ListView>

        <ImageView
            android:id="@+id/vqs_mygift_activity_nonitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/vqs_white"
            android:src="@drawable/vqs_main_non"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/vqs_mygift_activity_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/vqs_progressbar"
             />
    </FrameLayout>

</LinearLayout>