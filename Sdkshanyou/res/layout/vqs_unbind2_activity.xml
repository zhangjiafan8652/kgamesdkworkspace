<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/vqs_gray_bg"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/vqs_main_color" >

        <TextView
            android:id="@+id/vqs_unbind2_activity_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/vqs_main_back"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="解绑手机"
            android:textColor="@color/vqs_white"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:paddingLeft="10dp"
        android:text="1.解除绑定手机后请输入新的用户名"
        android:textColor="@color/vqs_text_black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:text="2.下次登录以用户名作为登录凭证"
        android:textColor="@color/vqs_text_black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/vqs_white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/vqs_text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vqs_unbind2_activity_phonenumber_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/vqs_text_black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/vqs_white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="@color/vqs_text_black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/vqs_unbind2_activity_code_et"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/vqs_white"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:numeric="integer"
            android:singleLine="true"
            android:textColor="@color/vqs_gray"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/vqs_unbind2_activity_getcode_unclicked_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vqs_getcode_unclicked"
               />

            <ImageView
                android:id="@+id/vqs_unbind2_activity_getcode_clicked_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:visibility="invisible"
                android:src="@drawable/vqs_getcode_clicked" />

            <TextView
                android:id="@+id/vqs_unbind2_activity_code_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vqs_code_time"
                android:gravity="center"
                android:textColor="@color/vqs_text_gray"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/vqs_white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="用户名"
            android:textColor="@color/vqs_text_black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/vqs_unbind2_activity_username_et"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/vqs_white"
            android:gravity="center_vertical"
            android:hint="请输入新用户名"
            android:singleLine="true"
             android:digits="@string/abc"
            android:textColor="@color/vqs_gray"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/vqs_unbind2_activity_unbind_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/vqs_main_text_bg"
        android:gravity="center"
        android:text="解除绑定"
        android:textColor="@color/vqs_white" />

</LinearLayout>