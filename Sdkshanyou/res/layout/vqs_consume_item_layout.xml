<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/vqs_gray_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/vqs_consume_item_title"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight="1"
        android:background="@color/vqs_white"
        android:gravity="center"
        android:text="魔兽世界"
        android:textColor="@color/vqs_text_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/vqs_consume_item_rmb"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight="1"
        android:background="@color/vqs_white"
        android:gravity="center"
        android:text="80.0"
        android:textColor="@color/vqs_text_red"
        android:textSize="16sp" />

    <TextView
         android:id="@+id/vqs_consume_item_time"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0.5dp"
        android:layout_weight="1"
        android:background="@color/vqs_white"
        android:gravity="center"
        android:text="2017-02-02"
        android:textColor="@color/vqs_text_gray"
        android:textSize="16sp" />

</LinearLayout>