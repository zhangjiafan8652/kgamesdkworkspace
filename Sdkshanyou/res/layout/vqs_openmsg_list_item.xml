<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@color/vqs_white"
     >

    <ImageView
        android:id="@+id/vqs_openmsg_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
       />

    <TextView
         android:singleLine="true"
        android:id="@+id/vqs_openmsg_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vqs_openmsg_item_icon"
        android:layout_toRightOf="@id/vqs_openmsg_item_icon"
        android:textColor="@color/vqs_text_black"
        android:textSize="16sp" />
    <ImageView 
        android:layout_toRightOf="@id/vqs_openmsg_item_title"
        android:layout_alignBottom="@id/vqs_openmsg_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vqs_openmsg_item_hot"
        android:src="@drawable/vqs_openmsg_hot"
        />

    <TextView
         android:singleLine="true"
        android:id="@+id/vqs_openmsg_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/vqs_openmsg_item_icon"
        android:textColor="@color/vqs_text_red"
        android:textSize="14sp" />

    <TextView
        android:singleLine="true"
        android:id="@+id/vqs_openmsg_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vqs_openmsg_item_icon"
        android:layout_toRightOf="@id/vqs_openmsg_item_icon"
        android:textColor="@color/vqs_text_gray"
        android:textSize="14sp" />
</RelativeLayout>